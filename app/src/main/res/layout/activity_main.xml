<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.heiliuer.zhongqi.camerapic.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical" tools:layout_editor_absoluteY="-4dp"
                  tools:layout_editor_absoluteX="0dp">


        <Button android:layout_width="wrap_content" android:text="@string/btn_open_camera"
                android:layout_height="wrap_content" android:id="@+id/btnClick"/>


        <Button android:layout_width="wrap_content" android:text="@string/btn_open_camera"
                android:layout_height="wrap_content" android:id="@+id/btnClick1"/>

        <Button android:layout_width="wrap_content" android:text="@string/btn_open_camera"
                android:layout_height="wrap_content" android:id="@+id/btnClick2"/>


        <Button android:layout_width="wrap_content" android:text="@string/btn_open_act2"
                android:layout_height="wrap_content" android:id="@+id/btn_open_act2"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
